/**index.wxss**/
.banner{
  width: 100%;
  height: 300rpx;
  padding-bottom: 25rpx;
  border-bottom: 2px solid #ccc;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.flex-wrp {
  display: flex;
  flex-direction:row;
  padding: 30rpx 50rpx 20rpx 50rpx;
  justify-content: space-between;
  flex-wrap:wrap;
  border-bottom: 1px solid #ccc;
  margin-bottom: 60px;
}

.flex-item {
  width:50px;
  display: flex;
  flex-direction: column;
}

.flex-item image{
  width: 40px;
  height: 40px;
  margin: 0 auto 5px;
}

.flex-item text{
  font-size: 12px;
  color: #666;
  line-height: 22px;
}

.shop-item{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content: flex-start;
}

.list-title {
  font-size: 32rpx;
  text-align: center;
  margin-top: 35px;
  margin-bottom: 25px;

}

.list-title text{
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
  background-repeat:no-repeat;
  padding: 2px 6px;
}

.list-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 25px;
}

.item-container{
  width:90%;
  margin:0 auto;
  position:relative;
}

.list-item image {
  width: 100%;
  height: 320rpx;
  vertical-align: top;
}

.item-name {
  width:71%;
  position:absolute;
  left:15%;
  top:27.17%;
  font-family: Arial, Helvetica, sans-serif;
  font-size:100%;
  font-weight: bold;
  text-align:center;
  word-wrap: break-word;
  word-break: normal;
}

.item-total {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  font-size: 24rpx;
  color: #f97633;
  padding: 0 5%;
}
.buy {
  padding: 0;
  font-size: 24rpx;
  line-height: 40rpx;
  width: 100rpx;
  height: 40rpx;
  background: #fff;
  border: 1px #f97633 solid;
  color: #f97633;
}