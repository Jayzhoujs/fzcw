.container{
  display: block;
  position: relative;
}
.swiper-box {
    width: 100%;
    height: 320px;
}
.swiper-box .slide-image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}
.shopping-container {
    padding: 0 30rpx;
}
.shopping-container .name {
    margin:10px 0;
    font-weight:bold;
    color:#333;
}
.shopping-container .price {
    margin: 10px 0;
    font-weight: normal;
    color:#F95C00;
}
.shopping-container .remark {
    margin: 10px 0;
    color: #333;
    font-size: 12px;
    line-height: 22px;
}
.swiper-container {
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}
.swiper-pager {
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0,0,0,.3);
    color: #fff;
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    line-height: 40px;
    font-size: 12px;
}
.communication text{
  line-height: 20px;
}

.footer-btn{
  position:fixed;
  bottom:0;
  background:white;
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
}
.icon-container{
  width:45%;
  box-sizing:border-box;
  padding:18rpx 76rpx 10rpx 30rpx;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.icon-items{
  width: 30px;
  display:flex;
  flex-direction:column;
  justify-content:space-bewteen;
}
.icon-items image{
  width: 16px;
  height: 16px;
  margin: 0 auto;
}
.icon-items text{
 font-size: 10px;
 text-align: center;
}

.btn-container{
  width:47%;
  box-sizing:border-box;
  display:flex;
  border:1px solid #ccc;
  font-size:12px;
  line-height:100rpx;
  color:#fff;
  text-align:center;
  margin-left:8%; 
}
.btn-container view{
  width:50%;
  height:100rpx;
}