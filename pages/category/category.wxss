.list-item {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.item-container{
  width:95%;
  margin:0 auto;
  position:relative;
}

.list-item image {
  width: 100%;
  vertical-align: top;
}

.item-name {
  width:71%;
  position:absolute;
  left:15%;
  top:80rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-size:80%;
  font-weight: bold;
  text-align:center;
  word-wrap: break-word;
  word-break: normal;
}

.item-total {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
