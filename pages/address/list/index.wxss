.prompt-container {
  width: 100%;
  height: 100%;
  border-top: 1px solid #ccc;
}

/*-------  msg  --------*/
.prompt-msg{
  width:30%;
  display:flex;
  flex-direction:column;
  margin:50px auto;
}

.prompt-msg image {
  width:80px;
  height:80px;
  margin:0 auto;
}
.prompt-msg text {
  font-size:12px;
  line-height:41px;
  color:#ccc;
  text-align:center;
}

.prompt-msg button {
  width:90px;
  height:20px;
  font-size:12px;
  line-height:20px;
  background:#F95C00;
  color:#fff;
  border-radius:3px;
  margin:0 auto;
  padding:0;
}
.address-list{
	height: 100%;
	padding-bottom: 46px;
}

.address-list .weui-media-box{
	padding-right: 35px;
}

.address-list .edit{
	position: absolute;
	top: 50%;
	right: 15px;
	width: 20px; 
  height: 20px;
  -webkit-transform: translate3d(0,
  -50%,
  0);
    transform: translate3d(0,
  -50%,
  0);
}
.text-orangered{
  color: orangered;
}

.address-list .edit .icon{
    width: 20px; 
    height: 20px;
}
.btn-plus{
  position:fixed;
  bottom:0;
  left:0;
  display:block;
  width:100%;
  margin-left:auto;
  margin-right:auto;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  font-size:18px;
  text-align:center;
  text-decoration:none;
  color:#479de6;
  background-color:#fff;
  line-height:2.55555556;
  -webkit-tap-highlight-color:rgba(0, 0, 0, 0);
  overflow:hidden;
}
.btn-plus .icon {
  margin-bottom:2px;
  margin-right:5px;
  vertical-align:middle;
  width:20px;
  height:20px;
}
